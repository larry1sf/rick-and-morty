---
import Button from "@components/ui/Button.tsx";
interface Props {
    buttonPrincipal?: string;
    title?: string;
}
const {
    buttonPrincipal = "Â¡Entra al multiverso! ",
    title = " Explora Nuestro Multiverso",
} = Astro.props;
---

<section
    id="banner"
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 py-12 h-[90vh]"
>
    <article
        class="row-start-1 z-20 md:col-start-1 md:col-end-2 flex flex-col justify-between relative"
    >
        <header class="flex flex-col gap-16">
            <h1
                class="font-extrabold text-white inline-block text-5xl lg:text-7xl w-3xs sm:w-2xs md:w-96 lg:w-[35rem] after:text-sky-500 after:content-['.'] after:absolute absolute top-30 sm:relative sm:top-0 mt-32"
            >
                {title}
            </h1>

            <Button
                isLink={{
                    href: "/#explorar",
                    title: "Vamos a explorar un universo",
                }}
                variantColor="primary"
                className=" bg-primary/20! py-3! max-w-fit border-primary/40! text-white! hover:bg-primary/30!"
            >
                {buttonPrincipal}
            </Button>
        </header>
        <footer class="space-y-6">
            <slot name="desc" />

            <span
                class="text-primary brightness-125 text-base sm:text-lg capitalize"
            >
                Wubba Lubba Dub Dub!
            </span>
        </footer>
    </article>

    <article class="row-span-full col-span-2">
        <div class="size-full container-window">
            <div id="window-image"></div>
            <span id="window"></span>
        </div>
    </article>
</section>

<style>
    :root {
        --window-height: 700px;
    }
    .container-window {
        position: relative;

        #window-image {
            background-image: url("/fondo-rick.svg");
            background-position: 30% 50%;
            background-repeat: no-repeat;
            background-size: cover;
            aspect-ratio: 1/1;
            height: 100%;
            width: 100%;
        }

        #window {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 0%;
            filter: blur(30px);
            background-color: rgb(0, 0, 0);
            animation: vanish-up auto linear both;
            animation-timeline: scroll();
            animation-range: 0 var(--window-height);
        }
    }

    @keyframes vanish-up {
        to {
            height: 100%;
        }
    }
</style>
