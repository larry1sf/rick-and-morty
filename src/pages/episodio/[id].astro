---
import type { Character, Episode } from "@/types/api";
import { fetchApi } from "@/services/gets";
import { IcoEpisodios } from "assets/Icons";
import { parseEpisode } from "@/const/constantes";

import Layout from "@/layouts/Layout.astro";
import ButtonVolver from "@/components/ui/ButtonVolver";
import ListaCards from "@/components/cards/ListCards";

export const prerender = false;

const { id } = Astro.params;

const episode = (await fetchApi({
    option: "episode",
    id: id,
})) as Episode;

if (!episode || !id || Number(id) !== episode.id) return Astro.redirect("/");

const idsCharacters = episode?.characters.map(
    (char) => char.split("/").pop() || "",
);
const parsedEpisode = parseEpisode(episode.episode);

const characters = (await fetchApi({
    option: "character",
    id: idsCharacters,
})) as Character[];
---

<Layout title={`Episodio: ${episode.name}`}>
    <div slot="main" class="w-full pt-24 pb-12 px-4 sm:px-6 min-h-screen">
        <div class="max-w-6xl mx-auto">
            <!-- Botón Volver -->
            <div class="mb-12">
                <ButtonVolver />
            </div>

            <!-- Header Section -->
            <header
                class="relative overflow-hidden rounded-[2.5rem] bg-slate-900/60 border border-white/10 p-8 md:p-14 mb-16 backdrop-blur-2xl shadow-2xl shadow-black/50"
            >
                <!-- Background Decor -->
                <div
                    class="absolute -top-24 -right-24 w-96 h-96 bg-primary/10 rounded-full blur-[100px] pointer-events-none"
                >
                </div>
                <div
                    class="absolute -bottom-24 -left-24 w-72 h-72 bg-sky-500/5 rounded-full blur-[80px] pointer-events-none"
                >
                </div>

                <div
                    class="absolute top-0 right-0 p-8 opacity-[0.03] pointer-events-none"
                >
                    <IcoEpisodios className="size-80" />
                </div>

                <section
                    class="relative z-10 flex flex-col md:flex-row gap-10 items-center md:items-start text-center md:text-left"
                >
                    <article class="relative group">
                        <div
                            class="absolute inset-0 bg-primary/30 rounded-3xl blur-2xl group-hover:bg-primary/40 transition-colors duration-500 opacity-50"
                        >
                        </div>
                        <div
                            class="relative bg-slate-800/80 p-8 rounded-[2rem] border border-white/10 shadow-inner"
                        >
                            <IcoEpisodios
                                className="size-20 text-primary drop-shadow-[0_0_15px_rgba(var(--primary-rgb),0.5)]"
                            />
                        </div>
                    </article>

                    <article class="space-y-6 flex-1">
                        <div class="space-y-2">
                            <div
                                class="flex items-center justify-center md:justify-start gap-3"
                            >
                                <div class="h-px w-8 bg-primary/50"></div>
                                <span
                                    class="text-primary font-black uppercase tracking-[0.4em] text-[10px]"
                                    >Expediente de Transmisión</span
                                >
                            </div>
                            <h1
                                transition:name={`name-episode-${id}`}
                                class="text-4xl md:text-7xl font-black text-white leading-[1.1] drop-shadow-2xl"
                            >
                                {episode.name}
                            </h1>
                        </div>

                        <div
                            class="flex flex-wrap justify-center md:justify-start gap-4"
                        >
                            <span
                                class="px-6 py-2 rounded-xl bg-white/5 border border-white/10 text-slate-300 text-sm font-bold uppercase tracking-widest backdrop-blur-md shadow-[0_0_20px_rgba(var(--primary-rgb),0.1)]"
                            >
                                Temporada {parsedEpisode.season}
                            </span>
                            <span
                                class="px-6 py-2 rounded-xl bg-primary/10 border border-primary/20 text-primary text-sm font-bold uppercase tracking-widest backdrop-blur-md"
                            >
                                Episodio {parsedEpisode.episode}
                            </span>
                        </div>
                    </article>
                </section>

                <!-- Stats Grid -->
                <section
                    class="grid grid-cols-2 lg:grid-cols-4 gap-4 mt-16 relative z-10"
                >
                    <article
                        class="group/stat bg-slate-950/40 rounded-3xl p-6 border border-white/5 hover:border-primary/30 transition-all duration-300 backdrop-blur-sm"
                    >
                        <p
                            class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1.5 group-hover/stat:text-primary transition-colors"
                        >
                            Temporada
                        </p>
                        <p class="text-2xl text-white font-black">
                            {parsedEpisode.season}
                        </p>
                    </article>
                    <article
                        class="group/stat bg-slate-950/40 rounded-3xl p-6 border border-white/5 hover:border-primary/30 transition-all duration-300 backdrop-blur-sm"
                    >
                        <p
                            class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1.5 group-hover/stat:text-primary transition-colors"
                        >
                            Personajes
                        </p>
                        <p class="text-2xl text-white font-black">
                            {characters?.length ?? 0}
                        </p>
                    </article>
                    <article
                        class="group/stat bg-slate-950/40 rounded-3xl p-6 border border-white/5 hover:border-primary/30 transition-all duration-300 backdrop-blur-sm"
                    >
                        <p
                            class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1.5 group-hover/stat:text-primary transition-colors"
                        >
                            Fecha Estreno
                        </p>
                        <p class="text-lg text-white font-bold leading-tight">
                            {
                                new Date(episode.air_date).toLocaleDateString(
                                    "es-ES",
                                    {
                                        day: "2-digit",
                                        month: "short",
                                        year: "numeric",
                                    },
                                )
                            }
                        </p>
                    </article>
                    <article
                        class="group/stat bg-slate-950/40 rounded-3xl p-6 border border-white/5 hover:border-primary/30 transition-all duration-300 backdrop-blur-sm"
                    >
                        <p
                            class="text-[10px] text-slate-500 uppercase font-black tracking-widest mb-1.5 group-hover/stat:text-primary transition-colors"
                        >
                            Registro ID
                        </p>
                        <p class="text-2xl text-white font-mono font-bold">
                            #{episode.id.toString().padStart(3, "0")}
                        </p>
                    </article>
                </section>
            </header>

            <ListaCards client:visible cards={characters} option="character" />
        </div>
    </div>
</Layout>
